<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#120F0F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/digitalrview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="50sp"
            android:padding="8dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textSize="50sp"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_gravity="center">

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:backgroundTint="#FF9500"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:textColor="@color/white"
            android:contentDescription="Clear all"/>

        <Button
            android:id="@+id/od"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OD"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Operation code"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:contentDescription="Divide"
            android:backgroundTint="#FF9500"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Seven"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Eight"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Nine"/>

        <Button
            android:id="@+id/multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:contentDescription="Multiply"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Four"/>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Five"/>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Six"/>

        <Button
            android:id="@+id/subtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:contentDescription="Subtract"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="One"/>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Two"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Three"/>

        <Button
            android:id="@+id/addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginEnd="6dp"
            android:padding="35dp"
            android:contentDescription="Add"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_marginEnd="20dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Decimal point"
            />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginEnd="20dp"
            android:padding="35dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:contentDescription="Zero"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:backgroundTint="#FF9500"
            android:text="="
            android:padding="30dp"
            android:textColor="@color/white"
            android:contentDescription="Equal sign"/>
    </GridLayout>
</LinearLayout>
